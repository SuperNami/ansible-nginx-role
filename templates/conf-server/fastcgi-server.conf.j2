# Set cache on
#
  set $skip_cache 0;


# POST requests and urls with a query string
#
  if ($request_method = POST) {
    set $skip_cache 1;
  }


# Empty requests and urls with a query string
#
  if ($query_string != "") {
    set $skip_cache 1;
  }


# Set max expires headers on below file formats
#
  location ~* ^.+\.(ogg|ogv|svg|svgz|eot|otf|woff|mp4|ttf|rss|atom|jpg|jpeg|gif|png|ico|zip|tgz|gz|rar|bz2|doc|xls|exe|ppt|tar|mid|midi|wav|bmp|rtf)$ {
    access_log off; log_not_found off; expires max;
  }
